{
  "name": "backend",
  "version": "0.0.0",
  "scripts": {
    "build": "node build.js",
    "lint": "eslint . --ext .ts",
    "start:prod": "node ./dist/index.js --env=production",
    "start:staging": "node ./dist/index.js --env=staging",
    "start": "ts-node -r tsconfig-paths/register ./src",
    "watch": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node -r tsconfig-paths/register ./src --env=development\"",
    "test": "ts-node -r tsconfig-paths/register ./spec"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lokijs": "^1.5.7",
    "command-line-args": "^5.1.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "express-joi-validation": "^5.0.0",
    "helmet": "^3.23.0",
    "http-status-codes": "^1.4.0",
    "jest": "^26.1.0",
    "joi": "^17.4.2",
    "joi-extract-type": "^15.0.8",
    "jsonwebtoken": "^8.5.1",
    "lokijs": "^1.5.12",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.2",
    "uuid": "^8.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "@types/find": "^0.2.1",
    "@types/helmet": "0.0.47",
    "@types/jasmine": "^3.5.10",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.13",
    "@types/node-fetch": "^2.5.10",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "find": "^0.3.0",
    "fs-extra": "^9.0.1",
    "jasmine": "^3.5.0",
    "nodemon": "^2.0.7",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0"
  }
}
